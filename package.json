{
  "scripts": {
    "build": "anchor build && scripts/build/spl-token-metadata-example.sh",
    "set-network:localnet": "solana config set --url http://localhost:8899",
    "set-network:devnet": "solana config set --url https://api.devnet.solana.com",
    "set-network:mainnet": "solana config set --url https://api.mainnet-beta.solana.com",
    "deploy:devnet": "yarn set-network:devnet && scripts/deploy/devnet/all.sh",
    "start:localnet": "solana-test-validator",
    "restart:localnet": "solana-test-validator -r",
    "test:localnet": "yarn set-network:localnet && scripts/build/spl-token-metadata-example.sh && TEST_ENV=localnet anchor test",
    "test:localnet:keep-open": "yarn test:localnet -- --skip-local-validator",
    "test:devnet": "TEST_ENV=devnet ts-mocha -p ./tsconfig.json -t 1000000 tests/**/*.ts",
    "test:devnet:redeploy": "yarn build && yarn deploy:devnet && yarn test:devnet",
    "lint": "eslint ."
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@coral-xyz/borsh": "^0.29.0",
    "@solana/codecs-data-structures": "2.0.0-experimental.8618508",
    "@solana/codecs-strings": "2.0.0-experimental.8618508",
    "@solana/spl-token": "^0.3.9",
    "@solana/spl-token-metadata": "^0.1.2",
    "@solana/spl-type-length-value": "^0.1.0",
    "@solana/web3.js": "^1.87.6",
    "dotenv": "^16.3.1",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "chai": "^4.3.4",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "mocha": "^9.0.3",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "typescript": "^4.3.5"
  }
}
