{
  "compilerOptions": {
    "lib": ["es2016"],
    "module": "commonjs",
    "target": "es2016",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "build"
  },
  "include": ["**/*.ts"],
  "exclude": ["vitest.config.ts", "tsconfig.json", "build"]
}
