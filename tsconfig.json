{
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "module": "esnext",
    "target": "es2020",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "build",
    "moduleResolution": "node"
  },
  "include": ["**/*.ts"],
  "exclude": ["vitest.config.ts", "tsconfig.json", "build"]
}
